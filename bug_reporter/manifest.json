{
    "manifest_version": 3,
    "name": "Bug Reporter",
    "version": "0.1",
    "description": "버그 리포팅을 도와주는 확장 프로그램",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {},
    "options_page": "options.html",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}